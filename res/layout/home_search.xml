<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ImageView
            android:id="@+id/common_back_array"
            style="@style/common_back_array_style"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="11dp" />

        <TextView
            android:id="@+id/common_backhome"
            style="@style/common_backhome_textview_style"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/common_back_array"
            android:text="返回" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/special_item_title"
                style="@style/home_textview_style"
                android:text="搜索结果"
                android:textColor="#303030" />
        </LinearLayout>
        <!-- 输入的搜索信息 -->

        <EditText
            android:id="@+id/home_search"
            style="@style/search_small_style" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/division_01" />

    <com.smartx.bill.mepad.mestore.myview.MyGridView
        android:id="@+id/search_gridView"
        style="@style/ranking_gridview_style" />

</LinearLayout>
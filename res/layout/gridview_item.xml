<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp" >
    <!-- 
    android:background="@drawable/border" -->

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/item_imageView_discription"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/app_download_count"
        android:layout_alignTop="@+id/app_icon"
        android:ellipsize="marquee"
        android:text="@string/hello_world"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/app_score"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_title"
        android:layout_toRightOf="@+id/app_icon"
        android:numStars="5" />

    <TextView
        android:id="@+id/app_download_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_score"
        android:layout_toRightOf="@+id/app_icon"
        android:ellipsize="marquee"
        android:text="@string/item_download_count"
        android:textSize="12sp" />

</RelativeLayout>
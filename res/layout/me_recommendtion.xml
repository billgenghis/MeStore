<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="65.0dip"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ImageView
            android:id="@+id/me_competitve_more_array"
            style="@style/mepage_recommendation_back_array_style"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/home_me_back"
            android:layout_marginLeft="11dp"/>

        <TextView
            android:id="@+id/home_me_back"
            style="@style/home_back_textview_style"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/me_competitve_more_array"
            android:text="@string/home_me" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/me_recom_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/tab_left" >

                <Button
                    android:id="@+id/me_recom_excellent"
                    android:layout_weight="0.50"
                    style="@style/tab_button_style"
                    android:text="精品推荐" />

                <Button
                    android:id="@+id/me_recom_new"
                    android:layout_weight="0.50"
                    style="@style/tab_button_style"
                    android:text="新品推荐" />
            </LinearLayout>
        </LinearLayout>
        <!-- 输入的搜索信息 -->

        <EditText
            android:id="@+id/home_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/search_small"
            android:drawableLeft="@drawable/home_search"
            android:hint="搜索应用"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColorHint="#bfbfbf"
            android:textSize="17sp" >
        </EditText>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/me_recom_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/circular_edge"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <include layout="@layout/common_appsinfo" />
    </LinearLayout>

    <View
        android:id="@+id/titleDivider"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@drawable/division_01" />

    <LinearLayout
        android:id="@+id/dialog_appinfo_tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background1" >

        <TextView
            android:id="@+id/dialog_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.22"
            android:gravity="center"
            android:text="@string/dialog_detail_info"
            android:textSize="18.0dip" />

        <TextView
            android:id="@+id/dialog_judge_score"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.32"
            android:gravity="center"
            android:text="@string/dialog_judge_score"
            android:textSize="18.0dip" />

        <TextView
            android:id="@+id/dialog_same_developers"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.17"
            android:gravity="center"
            android:text="@string/dialog_same_developers"
            android:textSize="18.0dip" />

        <TextView
            android:id="@+id/dialog_detail_permission"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.21"
            android:gravity="center"
            android:text="@string/dialog_detail_permission"
            android:textSize="18.0dip" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/dialog_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
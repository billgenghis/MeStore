<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- gridview items for apps style. -->
    <style name="gridview_items_picture_style">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:contentDescription">@string/item_imageiew_discription</item>
        <item name="android:src">@drawable/empty_icon</item>
    </style>

    <style name="gridview_items_titletextview_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#303030</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="gridview_items_downnum_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#A0A1A2</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="gridview_items_ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:progressDrawable">@drawable/my_ratingbar_full</item>
    </style>

    <!-- homepage textview style. -->
    <style name="home_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">13dp</item>
        <item name="android:textColor">#A0A1A2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="home_searchview_style">
        <item name="searchDropdownBackground">@drawable/search_big</item>
        <item name="searchViewSearchIcon">@drawable/home_search</item>
        <item name="searchViewEditQueryBackground">@drawable/search_big</item>
    </style>

    <!-- mepage textview style. -->
    <style name="mepage_apps_update_all_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mepage_apps_update_all_num_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="me_gridview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:horizontalSpacing">29dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">10dp</item>
    </style>

    <style name="mepage_guide_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="mepage_relative_layout_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginLeft">27dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="mepage_guide_more_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:text">更多</item>
        <item name="android:textColor">#3caef7</item>
    </style>

    <style name="mepage_guide_more_array_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/array_right</item>
        <item name="android:textColor">#3caef7</item>
    </style>

    <!-- for ranking item view -->
    <style name="ranking_gridview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">0dp</item>
    </style>

    <style name="ranking_gridview_items_picture_style">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <!-- <item name="android:layout_marginLeft">30dp</item> -->
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:contentDescription">@string/item_imageiew_discription</item>
        <item name="android:src">@drawable/empty_icon</item>
    </style>

    <!-- for category's layout view -->
    <style name="category_view_line_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">@drawable/division_02</item>
    </style>

    <style name="category_gridview_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:verticalSpacing">8dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:horizontalSpacing">16dp</item>
    </style>

    <style name="category_guide_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="category_gridview_item_textview_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">分类</item>
        <item name="android:textColor">#88898a</item>
    </style>

    <style name="common_back_array_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/array_back</item>
    </style>

    <style name="home_back_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#A0A1A2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="tab_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#A0A1A2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#00000000</item>
    </style>

</resources>